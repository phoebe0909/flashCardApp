<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Sound">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="sound"
            android:title="Sound"
            app:selectable="true" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="Vibration"
            android:title="Vibration"
            app:selectable="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Study Settings">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="shuffle"
            android:title="Shuffle"
            app:selectable="true" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="manual"
            android:title="Manual"
            app:selectable="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Preference category">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="LightMode"
            android:title="Light Mode"
            app:selectable="true" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="darkMode"
            android:title="Dark Mode"
            app:selectable="true" />
    </PreferenceCategory>

</PreferenceScreen>